@model FundsLibrary.InterviewTest.Web.Models.FundManagerModel
@using FundsLibrary.InterviewTest.Web.Resources

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FundManagerModel</h4>
        <hr />
        
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert-success col-lg-12" style="padding: 15px 10px; margin-bottom: 15px"><span>@ViewBag.SuccessMessage</span></div>
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
