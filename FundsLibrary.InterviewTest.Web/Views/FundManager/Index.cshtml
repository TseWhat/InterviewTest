@model IEnumerable<FundsLibrary.InterviewTest.Web.Models.FundManagerModel>

<div class="fund-managers">
    <h1>Fund managers</h1>

    <table id="table" class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Biography</th>
                <th>Location</th>
                <th>ManagedSince</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fundManager in Model)
            {
                <tr class="fund-manager">
                    <td> <span class="glyphicon glyphicon-user"></span></td>
                    <td>@Html.ActionLink(fundManager.Name, "Details", new { Id = fundManager.Id })</td>
                    <td>@fundManager.Biography</td>
                    <td>@fundManager.Location</td>
                    <td>@fundManager.ManagedSince</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { managerId = @fundManager.Id } )</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row" style="margin-top: 20px">
        <div class="col-lg-12">
            <p>@Html.ActionLink("Add New Manager", "Add", null, new { @class = "btn btn-primary" })</p>
        </div>

    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/fundManager.js"></script>    
}
